<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/plusminus_button"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="590dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="91dp"
        android:text="+/-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/zero_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/zero_button"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="91dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/decimal_button"
        app:layout_constraintStart_toEndOf="@+id/plusminus_button" />
    />

    <Button
        android:id="@+id/decimal_button"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="91dp"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/equal_button"
        app:layout_constraintStart_toEndOf="@+id/zero_button" />

    <Button
        android:id="@+id/equal_button"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="91dp"
        android:layout_marginTop="590dp"
        android:text="="
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/decimal_button" />

    <Button
        android:id="@+id/plus_button"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/equal_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/three_button"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/decimal_button"
        app:layout_constraintEnd_toStartOf="@+id/plus_button" />


</androidx.constraintlayout.widget.ConstraintLayout>